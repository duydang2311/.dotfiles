
// Place your key bindings in this file to override the defaults
[
    {
        "key": "ctrl+w",
        "command": "-workbench.action.closeActiveEditor",
    },
    {
        "key": "ctrl+w h",
        "command": "workbench.action.navigateLeft",
    },
    {
        "key": "ctrl+w l",
        "command": "workbench.action.navigateRight",
    },
    {
        "key": "ctrl+w k",
        "command": "workbench.action.navigateUp",
    },
    {
        "key": "ctrl+w j",
        "command": "workbench.action.navigateDown",
    },
    {
        "key": "ctrl+t",
        "command": "workbench.files.action.focusFilesExplorer",
        "when": "!explorerViewletVisible"
    },
    {
        "key": "ctrl+t",
        "command": "workbench.action.closeSidebar",
        "when": "explorerViewletVisible"
    },
    {
        "key": "ctrl+n",
        "command": "editor.action.addSelectionToNextFindMatch",
        "when": "textInputFocus && !suggestWidgetVisible"
    },
    {
        "key": "g s",
        "command": "editor.action.showHover",
        "when": "neovim.mode == normal && editorTextFocus"
    },
    {
        "key": "g g",
        "command": "cursorTop",
        "when": "neovim.mode == normal && editorTextFocus"
    },
    {
        "key": "shift+g",
        "command": "cursorBottom",
        "when": "neovim.mode == normal && editorTextFocus",
    },
    {
        "key": "\\ d",
        "command": "editor.action.revealDefinition",
        "when": "editorTextFocus && neovim.mode != insert",
    },
    {
        "key": "j",
        "command": "vscode-neovim.compositeEscape1",
        "when": "neovim.mode == insert && editorTextFocus",
        "args": "j"
    },
    {
        "key": "k",
        "command": "vscode-neovim.compositeEscape2",
        "when": "neovim.mode == insert && editorTextFocus",
        "args": "k"
    },
    {
        "key": "Escape",
        "command": "macros.fixEscape",
        "when": "neovim.mode == visual && editorHasSelection && editorTextFocus",
    },
    {
        "key": "ctrl+k",
        "command": "editor.action.triggerParameterHints",
        "when": "neovim.mode == insert && editorTextFocus"
    },
    {
        "key": "d",
        "command": "deleteLeft",
        "when": "editorHasSelection && neovim.mode != insert"
    },
    {
        "key": "shift+k",
        "command": "editor.action.triggerParameterHints",
        "when": "neovim.mode == normal && editorTextFocus"
    },
    {
        "key": "ctrl+d",
        "command": "vscode-neovim.send",
        "args": "jjjj"
    },
    {
        "key": "ctrl+u",
        "command": "vscode-neovim.send",
        "args": "kkkk",
        "when": "editorTextFocus && neovim.mode != insert"
    },
    {
        "key": "ctrl+p",
        "command": "-list.focusUp",
        "when": "listFocus && !inputFocus"
    },
    {
        "key": "ctrl+p",
        "command": "-list.focusUp",
        "when": "inReferenceSearchEditor && neovim.mode == normal"
    },
]
