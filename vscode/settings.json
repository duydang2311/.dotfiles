{
    "editor.fontFamily": "TamzenForPowerline, monospace",
    "editor.fontSize": 18,
    "editor.fontLigatures": true,
    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "trailing",
    "editor.cursorSurroundingLines": 10,
    "editor.minimap.enabled": false,
    "editor.renderLineHighlight": "none",
    "editor.overviewRulerBorder": false,
    "editor.hideCursorInOverviewRuler": true,
    "editor.renderFinalNewline": true,
    "editor.guides.indentation": false,
    "editor.showFoldingControls": "always",
    "editor.glyphMargin": true,
    "editor.cursorBlinking": "solid",
    "editor.cursorSurroundingLinesStyle": "default",
    "editor.unicodeHighlight.invisibleCharacters": true,
    "editor.roundedSelection": true,
    "editor.wordWrapColumn": 100,
    "editor.wrappingStrategy": "simple",
    "editor.wrappingIndent": "same",
    "editor.wordWrap": "on",
    "editor.scrollbar.vertical": "hidden",
    "editor.scrollbar.horizontal": "hidden",
    "editor.formatOnSave": true,

    "files.insertFinalNewline": true,
    
    "terminal.integrated.fontFamily": "TamzenForPowerline",
    "terminal.integrated.fontSize": 18,
    "terminal.integrated.drawBoldTextInBrightColors": false,
    "terminal.integrated.tabs.enabled": false,
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell",
            "args": ["/nologo"]
        }
    },

    "explorer.openEditors.visible": 0,

    "workbench.editor.showTabs": false,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.tabCloseButton": "off",
    "workbench.activityBar.visible": false,
    "workbench.iconTheme": "origamid-next-icons",
    "workbench.colorCustomizations": {
        "statusBar.background": "#C3A6F1",
        "statusBar.noFolderBackground": "#C3A6F1",
        "statusBar.debuggingBackground": "#C3A6F1",
        "statusBar.foreground": "#1F2430",
        "statusBar.debuggingForeground": "#1F2430"
    },

    "window.menuBarVisibility": "toggle",
    "window.enableMenuBarMnemonics": false,
    "window.autoDetectColorScheme": true,
    "window.titleSeparator": " âž– ",

    "telemetry.telemetryLevel": "error",

    "singleEditorTabs.saveBehaviour": "ask",

    "[svelte]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "svelte.enable-ts-plugin": true,

    "vscode-neovim.neovimExecutablePaths.win32": "nvim",
    
    "macros": {
        "fixEscape": [
            "vscode-neovim.escape",
            "editor.action.cancelSelectionAnchor",
            "cancelSelection"
        ]
    },

    "gitlens.hovers.currentLine.details": false,
    "gitlens.hovers.currentLine.over": "line",

    "omnisharp.useModernNet": true,
    "omnisharp.enableAsyncCompletion": true,
    "omnisharp.autoStart": false,
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[scss]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "files.associations": {
        "*.rml": "html",
        "*.rcss": "css"
    },
    "workbench.colorTheme": "Monochrome",
    "workbench.productIconTheme": "feather-vscode",
    "window.zoomLevel": 0
}
